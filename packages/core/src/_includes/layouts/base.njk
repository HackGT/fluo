<!doctype html lang="en">
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=5.0" />
    <title>{{ title }}</title>
    
    <!-- website -->
    {% set css %}
    {% include "index.css" %}
    {% endset %}
    <style>
      {{ css | safe }}
    </style>


    <!-- fluo components -->
    <link rel="stylesheet" href="/dist/fluo.css" />
    <script type="module" src="/dist/fluo.esm.js"></script>
    <script nomodule src="/dist/fluo.js"></script>

    <!-- syntax highlighting -->
    <link rel="stylesheet" href="https://unpkg.com/@highlightjs/cdn-assets@10.6.0/styles/atom-one-dark.min.css"/>
  </head>
  
  <body>
    {{ content | safe }} 
  </body>
  
  {% set js %}
  {% include "index.js" %}
  {% endset %}
  <script>
    {{ js | safe }}
  </script>
</html>
